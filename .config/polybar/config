border-top-color = #3d3d3d

spacing = 3
padding-left = 0
padding-right = 5
module-margin-left = 6
module-margin-right = 6

font-0 = Roboto:size=10;2
font-1 = Symbola:size=4;1
font-2 = Symbola:size=5;1
